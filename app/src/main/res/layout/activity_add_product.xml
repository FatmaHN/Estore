<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProduct"
    android:orientation="vertical"
    android:id="@+id/add_product">
    <TableLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


           <!-- <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Une référence : "
                android:textSize="30dp" /> -->

            <EditText
                android:layout_gravity=""
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:id="@+id/ref"
                android:inputType="number"
                android:maxLength="5"
                android:hint="référence"
                />


           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="Un libellé : "
                android:textSize="30dp" /> -->

            <EditText
                android:id="@+id/lib"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:hint="libellé"

                />

          <!--  <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Une description : "
                android:textSize="30dp"
                />-->
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:id="@+id/desc"
                android:inputType="textPersonName"
                android:hint="description"
                />


           <!-- <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Un Prix : "
                android:textSize="30dp"
                />-->
            <EditText
                android:id="@+id/prix"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="30dp"
                android:inputType="number"
                android:hint="prix"/>

            <Button
                android:id="@+id/selectImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_primary"
                android:hint="SELECT IMAGE"
                android:textSize="18sp"
                android:textColorHint="@color/white"
                />



           <ImageView
                android:id="@+id/idImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
               android:src="@color/white"
                />
        <TableRow>
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/save"
                />
            <Button
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="cancel"
                android:id="@+id/cancel"
                />
    </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tb1"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tbrow1">
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Réference"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="libellé"/>
            <TextView
                android:id="@+id/t3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"/>
            <TextView
                android:id="@+id/t4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix"/>
        </TableRow>
    </TableLayout>
</LinearLayout>



</LinearLayout>